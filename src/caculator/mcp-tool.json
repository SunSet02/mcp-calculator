{
  "name": "CalculatorService",
  "description": "提供基本与高级数学运算能力的工具集合，包括加减乘除、幂运算、阶乘、平方根等",
  "tools": [
    {
      "name": "add",
      "description": "执行浮点数加法运算",
      "parameters": {
        "type": "object",
        "properties": {
          "a": { "type": "number", "description": "加数 a" },
          "b": { "type": "number", "description": "加数 b" }
        },
        "required": ["a", "b"]
      }
    },
    {
      "name": "subtract",
      "description": "执行浮点数减法运算",
      "parameters": {
        "type": "object",
        "properties": {
          "a": { "type": "number", "description": "被减数 a" },
          "b": { "type": "number", "description": "减数 b" }
        },
        "required": ["a", "b"]
      }
    },
    {
      "name": "multiply",
      "description": "执行浮点数乘法运算",
      "parameters": {
        "type": "object",
        "properties": {
          "a": { "type": "number", "description": "因数 a" },
          "b": { "type": "number", "description": "因数 b" }
        },
        "required": ["a", "b"]
      }
    },
    {
      "name": "divide",
      "description": "执行浮点数除法运算（除数必须非零）",
      "parameters": {
        "type": "object",
        "properties": {
          "a": { "type": "number", "description": "被除数 a" },
          "b": { "type": "number", "description": "除数 b，不能为 0" }
        },
        "required": ["a", "b"]
      }
    },
    {
      "name": "power",
      "description": "计算幂运算",
      "parameters": {
        "type": "object",
        "properties": {
          "base": { "type": "number", "description": "底数" },
          "exponent": { "type": "number", "description": "指数" }
        },
        "required": ["base", "exponent"]
      }
    },
    {
      "name": "sqrt",
      "description": "计算平方根",
      "parameters": {
        "type": "object",
        "properties": {
          "number": { "type": "number", "description": "需要开平方的数" }
        },
        "required": ["number"]
      }
    },
    {
      "name": "factorial",
      "description": "计算整数阶乘",
      "parameters": {
        "type": "object",
        "properties": {
          "n": { "type": "integer", "description": "非负整数 n" }
        },
        "required": ["n"]
      }
    },
    {
      "name": "get_greeting",
      "description": "生成个性化问候语",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "用户姓名" }
        },
        "required": ["name"]
      }
    }
  ]
}
